<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeFitMobile.Views.TrainingSessionEditPage"
             Title="Nowa sesja">

    <VerticalStackLayout Padding="10" Spacing="10">

        <Label Text="Data rozpoczęcia" />

        <DatePicker x:Name="startDatePicker" />

        <Label Text="Godzina rozpoczęcia" />

        <TimePicker x:Name="startTimePicker" />

        <Label Text="Data zakończenia" />

        <DatePicker x:Name="endDatePicker" />

        <Label Text="Godzina zakończenia" />

        <TimePicker x:Name="endTimePicker" />

        <Button Text="Zapisz"
                Clicked="OnSaveClicked" />

    </VerticalStackLayout>

</ContentPage>
