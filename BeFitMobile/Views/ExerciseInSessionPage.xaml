<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeFitMobile.Views.ExerciseInSessionPage"
             Title="Wykonane ćwiczenia">

    <VerticalStackLayout Padding="10" Spacing="10">

        <Button Text="Dodaj ćwiczenie do sesji"
                Clicked="OnAddClicked" />

        <CollectionView x:Name="exerciseInSessionList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10">
                        <HorizontalStackLayout Spacing="10">

                            <Label Text="{Binding ExerciseTypeId}" />
                            <Label Text=" | " />
                            <Label Text="{Binding TrainingSessionId}" />
                            <Label Text=" | " />
                            <Label Text="{Binding Weight}" />
                            <Label Text="kg | " />
                            <Label Text="{Binding Sets}" />
                            <Label Text="x" />
                            <Label Text="{Binding Repetitions}" />

                            <Button Text="Usuń"
                                    Clicked="OnDeleteClicked"
                                    CommandParameter="{Binding .}"
                                    HorizontalOptions="EndAndExpand"/>

                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>
