<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BeFitMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BeFitMobile"
    xmlns:views="clr-namespace:BeFitMobile.Views"
    Title="BeFitMobile">

    <TabBar>

        <ShellContent
            Title="Strona główna"
            ContentTemplate="{DataTemplate local:MainPage}" />

        <ShellContent
            Title="Typy ćwiczeń"
            ContentTemplate="{DataTemplate views:ExerciseTypesPage}" />

        <ShellContent
            Title="Sesje treningowe"
            ContentTemplate="{DataTemplate views:TrainingSessionsPage}" />


    </TabBar>

</Shell>
